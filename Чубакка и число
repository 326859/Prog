#include <iostream>
using namespace std;

int main()
{
    int sarr[5];
    int c;

    for(int i=0; i<5; i++)
        sarr[i]=0;

    while ( (c = getchar()) != '\n')
    {
        c = c-'0';
        if(c <= 4)
            sarr[c]++;
        else
            sarr[9-c]++;
    }

   if( sarr[0] != 0 )
   {
       if (sarr[1] != 0 )
       {
           cout << "1";
           sarr[1]--;
       }
       else if (sarr[2] != 0 )
       {
           cout << "2";
           sarr[2]--;
       }
       else if (sarr[3] != 0 )
       {
           cout << "3";
           sarr[3]--;
       }
       else if (sarr[4] != 0 )
       {
           cout << "4";
           sarr[4]--;
       }
   }

    for (int i=0; i<5; i++)
     for (sarr[i]; sarr[i] > 0; sarr[i]--)
         cout << i;
}
